{
	"manifest_version": 3,
	"name": "jable视频下载插件",
	"version": "0.3",
	"description": "下载jable.tv",
	"author": "Halo",
	"icons":
	{
		"16":"./icon_128.png",
		"48": "./icon_128.png",
		"128": "./icon_128.png"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://jable.tv/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": 
	[
		{
			"matches": [
				"https://jable.tv/videos/*/"
			],
			"js": ["content-script.js"]
		}
	],
	"options_ui": {
		"page": "settings.html",
		"open_in_tab": true
	},
	"web_accessible_resources":[
		{
			"resources": ["inject.js"],
			"matches": ["https://jable.tv/*"]
		}
	],
	"homepage_url": "https://www.augety.com"
}